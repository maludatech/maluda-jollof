<%- include("partials/header.ejs") %>

    <div class="main-container pt-20 mx-4 mb-20 sm:mb-12">
    <div class="body-container flex flex-col sm:flex-row  gap-6 sm:gap-10 mb-4">
        <div class="left-container sm:w-1/2">
            <img src="/assests/jollof-rice.jpg" class="rounded rounded-tl-[40px] object-cover h-96 w-96 sm:h-[80vh] sm:w-[600px]" alt="image here" title="Nigerian Jollof Rice">
        </div>
        <div class="right-container sm:w-1/2">
        <h1 class="title text-2xl bold">OUR NEW POST!!!</h1>
        <p class="content">This is our new delicacy for this week. Spicy Jollof rice with veggies and plaintain at it's best. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Rerum quaerat neque sint enim velit accusamus in animi! Temporibus in, aperiam optio, animi eligendi hic, voluptatum officiis quibusdam non eos cumque.</p>
        </div>
    </div>
    <% posts.forEach((post)=> {%>
     <div class="body-container mb-4 flex flex-col gap-6 sm:gap-10 sm:flex-row">
        <div class="left-container sm:w-1/2">
            <% if(post.image) {%>
            <img src="data:image/jpeg;base64, <%= post.image.toString('base64')%>" class="rounded-tl-[40px] rounded object-cover h-96 w-96 sm:h-[70vh] sm:w-[600px]" alt="image here" alt="image here" title="Nigerian Jollof Rice">
            <% } %>
        </div>
    <div class="right-container sm:w-1/2">
        <h1 class="text-2xl bold"><%= post.title%></h1>
        <p class=""><%= post.content%></p>
        <% }) %>
    </div>
    </div>

    <%- include("partials/footer.ejs") %>
